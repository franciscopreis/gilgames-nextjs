generator client {
  provider            = "prisma-client"
  output              = "../lib/generated/prisma"
  importFileExtension = ""
}

datasource db {
  provider = "postgresql"
}

model Author {
  id    String @id @default(cuid())
  name  String @unique
  books Book[] @relation("BookAuthors")
}

model Book {
  id          String      @id @default(cuid())
  title       String      @unique
  description String?
  price       Decimal     @db.Decimal(10, 2)
  stock       Int         @default(0)
  coverImage  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  authors     Author[]    @relation("BookAuthors")
  categories  Category[]  @relation("BookCategories")
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  books Book[] @relation("BookCategories")
}

model Order {
  id            String      @id @default(cuid())
  userId        String?
  totalPrice    Decimal     @db.Decimal(10, 2)
  shippingPrice Decimal     @db.Decimal(10, 2)
  status        OrderStatus @default(PENDING)
  createdAt     DateTime    @default(now())
  user          User?       @relation("UserOrders", fields: [userId], references: [id])
  items         OrderItem[]
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  bookId          String
  quantity        Int     @default(1)
  priceAtPurchase Decimal @db.Decimal(10, 2)
  book            Book    @relation(fields: [bookId], references: [id])
  order           Order   @relation(fields: [orderId], references: [id])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  role          Role      @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  name          String
  emailVerified Boolean   @default(false)
  image         String?
  updatedAt     DateTime  @updatedAt
  orders        Order[]   @relation("UserOrders")
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}
